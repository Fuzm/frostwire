<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.frostwire.android.gui.views.BrowseThumbnailImageButton
        android:id="@+id/view_browse_peer_thumbnail_grid_item_browse_thumbnail_image_button"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:background="@color/app_browse_thumbnail_background"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/view_browse_peer_thumbnail_grid_checkbox_textview"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:text="&#x2713;"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/basic_blue_highlight"
        android:background="@drawable/view_browse_peer_thumbnail_grid_checkbox_background"/>
</RelativeLayout>